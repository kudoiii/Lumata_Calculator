<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/solution_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/result_tv"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:textSize="32sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="62sp"
        android:textAlignment="textEnd"
        android:textColor="@color/white"
        android:layout_above="@id/buttons_layout"
        android:id="@+id/result_tv"
        android:layout_margin="16dp">

    </TextView>

    
    
    

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:background="@color/black"
        android:paddingVertical="16dp"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_none"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/grey"
                android:text="o"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="86dp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_open_bracket"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/grey"
                android:text="("
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="86dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_closed_bracket"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/grey"
                android:text=")"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="86dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_divide"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/silver"
                android:text="รท"
                android:textColor="@color/darkgrey"
                android:textSize="32sp"
                app:cornerRadius="86dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_7"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/darkgrey"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="86dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_8"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/darkgrey"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="86dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_9"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/darkgrey"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="86dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_multiply"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/silver"
                android:text="ร"
                android:textColor="@color/darkgrey"
                android:textSize="32sp"
                app:cornerRadius="86dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_4"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/darkgrey"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="86dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_5"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/darkgrey"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="86dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_6"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/darkgrey"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="86dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_subtract"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/silver"
                android:text="-"
                android:textColor="@color/darkgrey"
                android:textSize="32sp"
                app:cornerRadius="86dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_1"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/darkgrey"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="86dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_2"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="2"
                android:backgroundTint="@color/darkgrey"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="86dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_3"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="3"
                android:backgroundTint="@color/darkgrey"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="86dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_add"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="@color/silver"
                android:text="+"
                android:textColor="@color/darkgrey"
                android:textSize="32sp"
                app:cornerRadius="86dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_delete"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="d"
                android:fontFamily="monospace"
                android:backgroundTint="#FF0000"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="86dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_0"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="0"
                android:backgroundTint="@color/darkgrey"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="86dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_dot"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:text="."
                android:backgroundTint="@color/darkgrey"
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="86dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_equals"
                style="@style/ShapeAppearanceOverlay.Material3.FloatingActionButton"
                android:layout_width="60dp"
                android:layout_height="72dp"
                android:layout_margin="12dp"
                android:backgroundTint="#E1CC532E"
                android:text="="
                android:textColor="@color/white"
                android:textSize="32sp"
                app:cornerRadius="86dp" />

        </LinearLayout>


    </LinearLayout>

    </RelativeLayout>





